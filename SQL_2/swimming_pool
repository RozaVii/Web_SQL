cursor.executescript(
    '''
    DROP TABLE IF EXISTS schedule;
    CREATE TABLE schedule (
    schedule_id INTEGER PRIMARY KEY AUTOINCREMENT,
    coach_id INT,
    weekday INTEGER,
    start_time TIME,
    end_time TIME,
    FOREIGN KEY (coach_id) REFERENCES master (coach_id) ON DELETE CASCADE
);
    '''
)

