cursor.executescript(
    '''
        DROP TABLE IF EXISTS client;
        CREATE TABLE client (
        client_id INTEGER PRIMARY KEY AUTOINCREMENT,
        client_full_name VARCHAR(100),
        phone_number VARCHAR(11)
        );

    '''
)

